
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/file_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/folder" />

        <TextView
            android:id="@+id/file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" 
            android:textSize="@dimen/small"
            android:text="file_size"/>

        <TextView
            android:id="@+id/file_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/file_size"
            android:text="10-12-30" />

        <TextView
            android:id="@+id/file_name"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textSize="@dimen/medium"
            android:layout_alignBottom="@+id/file_time"
            android:layout_toRightOf="@+id/file_type"
            android:layout_toLeftOf="@+id/file_time"
            android:text="the name of the file" />

    </RelativeLayout>
