<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal" >
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="3"
        android:orientation="vertical" >
        
        <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/large"
            android:text="@string/login_profile" />

        <Spinner
            android:id="@+id/profile_spinner"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:textSize="@dimen/large"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/login_connect_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_connect" 
            android:onClick="doConnect"/>

        <Button
            android:id="@+id/login_disconnect_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_disconnect"
            android:onClick="doDisconnect" />

    </LinearLayout>
    </LinearLayout>

    

</LinearLayout>